<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_current_soc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m3_forget_password"
            android:textSize="@dimen/size_content_sp_14"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />



        <TextView
            android:id="@+id/tv_soc_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_12" />


        <TextView
            android:id="@+id/tv_soc_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_12" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_total_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m3_forget_password"
            android:textSize="@dimen/size_content_sp_14"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />



        <TextView
            android:id="@+id/tv_power_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_12" />


        <TextView
            android:id="@+id/tv_power_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_12" />


    </LinearLayout>


</LinearLayout>