<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m3_forget_password"
        android:textSize="@dimen/size_content_sp_14"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m3_forget_password"
            android:textSize="@dimen/size_content_sp_14"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />



        <ImageView
            android:id="@+id/iv_enable"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_total_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m3_forget_password"
            android:textSize="@dimen/size_content_sp_14"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_power_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_12" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_minimum_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m3_forget_password"
            android:textSize="@dimen/size_content_sp_14"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_min_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_12" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_12" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m3_forget_password"
        android:textSize="@dimen/size_content_sp_14"
        android:textStyle="bold" />


    <Button
        android:id="@+id/bt_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="36dp"
        android:textSize="@dimen/size_content_sp_12" />

</LinearLayout>